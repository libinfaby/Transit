<Window x:Class="Transit.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transit.Client"
        xmlns:vm="clr-namespace:Transit.Client.ViewModels"
        mc:Ignorable="d"
        Title="Transit LAN Share" Height="600" Width="900"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar: Clients -->
        <Border BorderBrush="Gray" BorderThickness="0,0,1,0" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="10">
                    <TextBlock Text="My Identity" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MachineName}" Margin="0,5,0,0"/>
                    <TextBox Text="{Binding ServerIp}" Margin="0,5,0,0"/>
                    <Button Command="{Binding ConnectCommand}" Content="Connect to Server" Margin="0,5,0,0" IsEnabled="{Binding IsNotConnected}"/> 
                    <!-- Assuming InverseBoolConverter exists or just rely on manual enable/disable logic in VM if I add CanExecute -->
                </StackPanel>

                <ListBox Grid.Row="1" ItemsSource="{Binding OnlineClients}" SelectedItem="{Binding SelectedClient}" Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding MachineName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding IpAddress}" FontSize="10"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="2" Command="{Binding SendFileCommand}" Content="Send File to Selected" Margin="10"/>
            </Grid>
        </Border>

        <!-- Right: Chat -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" ItemsSource="{Binding ChatMessages}" Margin="5"/>

            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Text="{Binding MessageInput, UpdateSourceTrigger=PropertyChanged}" Height="50" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                <Button Grid.Column="1" Command="{Binding SendMessageCommand}" Content="Send" Width="60" Margin="5,0,0,0"/>
            </Grid>
            
            <StatusBar Grid.Row="2">
                <StatusBarItem>
                    <TextBlock Text="{Binding TransferStatus}"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
